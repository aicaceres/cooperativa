<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta charset="UTF-8">
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
        <title>{% block title %}Sistema de Gestión{% endblock %}</title>
        {% block stylesheets %}
        <!-- bootstrap 3.0.2 -->
        <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
          
        <!-- font Awesome -->
        <link href="{{ asset('assets/css/font-awesome2.min.css') }}" rel="stylesheet" type="text/css" />
        <!-- Ionicons -->
        <link href="{{ asset('assets/css/ionicons.min.css') }}" rel="stylesheet" type="text/css" />
        
       <!-- datepicker 3.0.2 -->
        <link href="{{ asset('assets/css/datepicker/datepicker3.css') }}" rel="stylesheet" type="text/css" />
                
        
        <!-- daterange picker -->
        <link href="{{ asset('assets/css/daterangepicker/daterangepicker-bs3.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('assets/css/timepicker/bootstrap-timepicker.min.css') }}" rel="stylesheet" type="text/css" />
        <!-- jQuery UI -->
        <link href="{{ asset('assets/css/smoothness/jquery-ui-1.10.4.autocomplete.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('assets/css/smoothness/jquery-ui-1.10.4.custom.min.css') }}" rel="stylesheet" type="text/css" />
        <!-- DATA TABLES -->
        <link href="{{ asset('assets/css/datatables/dataTables.bootstrap.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('assets/chosen/chosen.min.css') }}" rel="stylesheet" type="text/css" />        
        <!-- Theme style -->
        <link href="{{ asset('assets/css/app.css') }}" rel="stylesheet" type="text/css" />
        
            {% block page_css %}{% endblock %}
        {% endblock %}
        {% block head_javascripts %}
            <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
            <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
            <!--[if lt IE 9]>
              <script src="{{ asset('assets/js/html5shiv.min.js') }}"></script>
              <script src="{{ asset('assets/js/respond.min.js') }}"></script>
            <![endif]-->
            {% block head_page_javascripts %}{% endblock %} 
        {% endblock %}         
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.jpg') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <!-- jQuery 2.0.2 -->
            <script src="{{ asset('assets/js/jquery.min.js') }}"></script>
            <!-- jquery ui 1.10.3 -->        
            <script src="{{ asset('assets/js/jquery-ui-1.10.3.min.js') }}"></script>
            <script src="{{ asset('assets/js/jquery-ui-1.10.4.custom.min.js') }}"></script>
            <script src="{{ asset('assets/js/jquery-ui-1.10.4.autocomplete.js') }}"></script>
            <!-- Bootstrap -->
            <script src="{{ asset('assets/js/bootstrap.min.js') }}" type="text/javascript"></script>
       
          <!-- Datepicer -->
            <script src="{{ asset('assets/js/datepicker/bootstrap-datepicker.js') }}" type="text/javascript"></script>
            
            
            <!-- DATA TABES SCRIPT -->
            <script src="{{ asset('assets/js/datatables/jquery.dataTables.js') }}" type="text/javascript"></script>
            <script src="{{ asset('assets/js/datatables/dataTables.bootstrap.js') }}" type="text/javascript"></script>
            <script src="{{ asset('assets/chosen/chosen.jquery.min.js') }}" type="text/javascript"></script>
            <!-- eModal -->            
            <script src="{{ asset('assets/js/eModal.js') }}"></script>
            {% block page_javascript %}
            
            {% endblock %}

            <!-- Admin App -->
            <script src="{{ asset('assets/js/app.js') }}" type="text/javascript"></script>
            <script type="text/javascript">
                jQuery(document).ready(function() {                   
                    if( $('#user').html() == '' ){
                        alert('Su sesión de usuario ha expirado.'); 
                        location.href = $('#user').data('url');
                    }
                });
            </script>
        {% endblock %} 
    </body>
</html>

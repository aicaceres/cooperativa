{% extends "::base.html.twig" %}
{% block title %}Sistema de Gestión - Ingreso{% endblock %}
{% block body %}
<body class="bg-black">

    <div class="form-box" id="login-box">
        <div class="header">
            <div class="logoppal" >
                <img src="{{ asset('assets/img/logos/logoppal.jpg') }}" alt="Ingreso" />
            </div>
        </div>
        <form action="{{ path("check_path") }}" method="post" >
            <div class="body bg-gray">
                {% if error %}
                    <div class="callout callout-danger">{{ error.message|trans }}</div>
                {% endif %}
                <div class="form-group">
                    <input type="text" name="_username" id="username" class="form-control" value="{{ last_username }}" placeholder="Nombre de usuario"/>
                </div>
                <div class="form-group">
                    <input type="password" name="_password" class="form-control" placeholder="Contraseña"/>
                </div>
                <div class="form-group">
                    <input type="checkbox" name="remember_me"/> No cerrar sesión
                </div>
            </div>
            <div class="footer">
                <button type="submit" class="btn bg-light-blue btn-block" >Ingresar</button>
            </div>
        </form>
    </div>
</body>
{% endblock %}
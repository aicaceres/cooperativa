<fieldset>                            
    <div class="col-md-6">
        <div class="form-group">
            <div>    
                <label>Dominio:</label>
                <input type="text" readonly="readonly" class="form-control" value="{{ entity.dominio }}">
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <div>
                <label>Año:</label>
                <input type="text" readonly="readonly" class="form-control" value="{{ entity.anio }}"></div>
        </div>
    </div>                                                                               
    <div class="col-md-3">
        <div class="form-group">
            <div>
                <label>Carga:</label>
                <input type="text" readonly="readonly" class="form-control" value="{{ entity.carga }}"></div>
        </div>
    </div>                                                                               
</fieldset>                                                                      
<fieldset>
    <div class="col-md-6">
        <div class="form-group">
            <div>
                <label>Marca:</label>
                <input type="text" readonly="readonly" class="form-control" value="{{ entity.marca }}">
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <div>
                <label>Modelo:</label>
                <input type="text" readonly="readonly" class="form-control" value="{{ entity.modelo }}"></div>
        </div>
    </div>        
</fieldset>                                                                      
<fieldset>                                   
    <div class="col-md-4">
        <div class="form-group">
            <div>                
                <label>Asignado al socio: </label>
                <input type="checkbox" disabled="disabled" id="sg_adminbundle_vehiculo_asignadoAlSocio" value="{{ entity.asignadoAlSocio }}" {% if entity.asignadoAlSocio %}checked="checked"{% endif %}>
            </div>
        </div>                        
    </div> 
    {% if not entity.asignadoAlSocio %}
        <div class="col-md-8" >
            <div class="form-group">
                <div>
                    <label>Empleado a cargo del vehículo:</label>
                    <input type="text" readonly="readonly" class="form-control" value="{{ entity.empleado }}"></div>
            </div>
        </div>
    </div>
{% endif %}

</fieldset>           


<br>
<table class="table table-bordered table-hover">
    <tbody>
        <tr>
            <th style="width: 5%">#</th>
            <th style="width: 69%"> Líneas</th>
            <th style="width: 20%"> Kilómetros</th>
        </tr>
        {% for linea in entity.lineas %}
        <tr>
            <td>{{ loop.index }}</td>
            <td> {{ linea.nombre }}</td>
            <td> {{ linea.kilometros }}</td>
        </tr>
        {% endfor %}    
    </tbody>                
</table>         

<script type="text/javascript">
    $(document).ready(function () {
        $('.modal-title').text('Vehículo');
        $(".btn-success").hide();
        $(".btn-danger").text('Cerrar');
    });
</script>